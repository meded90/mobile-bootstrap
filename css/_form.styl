.radio {
  .wrap-img {
    display: block
    margin-bottom: 20px
    margin-top: 5px
    img {
      border: 5px solid transparent
    }
  }
  :checked + .wrap-img img {
    border: 5px solid #fffc03
  }
}

.wrap-input {
  max-width: 310px
  width: 100%
  min-height: 40px
  display: inline-block
  margin-bottom: 15px
  position: relative
  border-radius: 4px

  .pading-input {
    position: relative
    padding-left: 10px
    padding-right: 5px

  }
  textarea,
  input {
    border: 0
    font-size: 20px
    line-height: 30px
    padding-top: 5px
    padding-bottom: 5px
    padding-left: 10px
    margin-left: -10px
    padding-right: 5px
    min-height: 40px
    width: 100%
    background-color: #fff
    border-radius: 4px
    &:focus {
      outline: none
      box-shadow: inset 0 1px 1px rgba(172, 235, 85, 0.075), 0 0 8px rgba(172, 235, 85, 0.8);
    }
  }
}

.wrap-textarea{
  width: 100%
  height: 120px

