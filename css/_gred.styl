@import "_responsive.styl"

clearfix()
  &:before,
  &:after
    content: " ";
    display: table;
  &:after
    clear: both;

.clearfix
  clearfix()

.container
  max-width: 600px;
  padding: 15px;
  margin: auto;
  text-align: center

.row-3
  clearfix()
 +md()
    .col
      float: left
      width: 50% - 4%
      margin-left: 2%
      margin-right: 2%
      &:nth-child(2n+1)
        clear: both

  +lg()
    .col
      width: (100% / 3) - 2%
      margin-left: 1%
      margin-right: 1%
      &:nth-child(2n+1)
        clear: none

      &:nth-child(3n+1)
        clear: both

.row-2
  &:before,
  &:after
    content: " ";
    display: table;
  &:after
    clear: both
  +md()
    .col
      float: left
      width: 50% - 4%
      margin-left: 2%
      margin-right: 2%
      &:nth-child(2n+1)
        clear: both

